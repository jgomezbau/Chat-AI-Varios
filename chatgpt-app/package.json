{
  "name": "chatgpt-app",
  "version": "1.0.0",
  "description": "Aplicaci贸n de escritorio para ChatGPT con soporte completo para portapapeles",
  "author": "Juan Bau <jgomezbau@gmail.com>",
  "main": "main.js",
  "homepage": "https://github.com/jgomezbau/Chat-AI-Varios/chatgpt-app",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "debug": "electron --inspect=5858 .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "chatgpt-app",
    "productName": "ChatGPT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "LICENSE",
      "!package-lock.json",
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "src/**/*",
      "main.js",
      "icons/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "synopsis": "Aplicaci贸n de escritorio para ChatGPT",
      "description": "Aplicaci贸n de escritorio para utilizar ChatGPT de forma nativa",
      "desktop": {
        "Name": "ChatGPT",
        "Comment": "Aplicaci贸n de escritorio para ChatGPT",
        "Categories": "Utility;Network;Chat"
      },
      "artifactName": "${productName}_${version}.${ext}",
      "icon": "icons/icon.png"
    },
    "appImage": {
      "license": "LICENSE"
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3"
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-clipboard-extended": "^1.1.1",
    "electron-store": "^8.2.0"
  },
  "license": "MIT"
}
